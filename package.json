{
  "name": "hasura-backend-plus",
  "license": "MIT",
  "repository": {
    "url": "git://github.com/nhost/hasura-backend-plus.git",
    "type": "git"
  },
  "version": "2.2.2",
  "main": "dist/start.js",
  "___scripts": {
    "build": "tsc",
    "dev": "ts-node-dev -r tsconfig-paths/register --no-notify src/ts-start.ts",
    "dev:docker": "ts-node-dev -r tsconfig-paths/register --no-deps --respawn --poll --interval 1000 --no-notify src/ts-start.ts",
    "docs:build": "vuepress build docs",
    "docs:dev": "vuepress dev docs",
    "start": "node -r ./dist/start.js",
    "test": "NODE_ENV=test jest --coverage --forceExit --runInBand",
    "test:ci": "NODE_ENV=ci jest --coverage --forceExit --runInBand",
    "test:watch": "NODE_ENV=test jest --watchAll --maxWorkers=1",
    "report-coverage": "codecov"
  },
  "scripts": {
    "start": "npm run build:live",
    "build": "tsc -p .",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec \"ts-node\" src/index.ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@hapi/boom": "9.1.1",
    "@nicokaiser/passport-apple": "^0.2.1",
    "@types/sharp": "^0.27.1",
    "archiver": "5.2.0",
    "aws-sdk": "2.834.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "1.19.0",
    "cookie-parser": "1.4.5",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "ejs": "3.1.5",
    "email-templates": "8.0.3",
    "express": "4.17.1",
    "express-fileupload": "1.2.1",
    "express-rate-limit": "5.2.3",
    "express-session": "^1.17.1",
    "fs-extra": "^9.1.0",
    "graphql": "15.5.0",
    "graphql-request": "3.4.0",
    "graphql-tag": "2.11.0",
    "hasura-cli": "1.3.3",
    "helmet": "4.4.1",
    "hibp": "10.0.1",
    "joi": "^17.3.0",
    "jose": "^2.0.4",
    "lodash.kebabcase": "4.1.1",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "nocache": "^2.1.0",
    "node-fetch": "^2.6.1",
    "nodemailer": "6.4.17",
    "notevil": "1.3.3",
    "otplib": "12.0.1",
    "passport": "0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-github2": "0.1.12",
    "passport-google-oauth20": "2.0.0",
    "passport-linkedin-oauth2": "^2.0.0",
    "passport-spotify": "^2.0.0",
    "passport-twitter": "^1.0.4",
    "passport-windowslive": "^1.0.2",
    "qrcode": "1.4.4",
    "sharp": "^0.27.1",
    "temp-dir": "^2.0.0",
    "tslib": "^2.1.0",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@types/archiver": "5.1.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "1.19.0",
    "@types/cookie-parser": "1.4.2",
    "@types/cors": "2.8.9",
    "@types/ejs": "3.0.5",
    "@types/email-templates": "8.0.1",
    "@types/express": "4.17.11",
    "@types/express-fileupload": "1.1.6",
    "@types/express-rate-limit": "5.1.1",
    "@types/express-session": "^1.17.3",
    "@types/fs-extra": "^9.0.6",
    "@types/hapi__joi": "17.1.6",
    "@types/helmet": "4.0.0",
    "@types/jest": "26.0.20",
    "@types/js-yaml": "^3.12.6",
    "@types/lodash.kebabcase": "4.1.6",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.22",
    "@types/node-fetch": "^2.5.8",
    "@types/nodemailer": "6.4.0",
    "@types/passport": "1.0.5",
    "@types/passport-facebook": "^2.1.10",
    "@types/passport-github2": "1.2.4",
    "@types/passport-google-oauth20": "2.0.6",
    "@types/passport-linkedin-oauth2": "^1.5.2",
    "@types/passport-spotify": "^1.1.0",
    "@types/passport-twitter": "^1.0.36",
    "@types/qrcode": "1.3.5",
    "@types/supertest": "^2.0.10",
    "@types/temp-dir": "^2.0.2",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "@vuepress/plugin-back-to-top": "1.8.0",
    "codecov": "^3.8.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.19.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "jest-extended": "0.11.5",
    "js-yaml": "^3.14.1",
    "lint-staged": "10.5.3",
    "markdown-it-multimd-table": "4.0.3",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "supertest": "6.1.3",
    "ts-jest": "26.5.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "1.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "^4.1.3",
    "vuepress": "1.8.0"
  },
  "___moduleAliases": {
    "@shared": "./dist/shared",
    "@test": "./dist/test"
  },
  "eslintConfig": {
    "root": true,
    "rules": {
      "@typescript-eslint/camelcase": "off"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:jest/recommended"
    ]
  },
  "eslintIgnore": [
    "dist",
    "node_modules",
    "*.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js,*.ts,*.md,*.json": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
