{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declarationDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": [
        "./src/types/*",
        "./node_modules/*"
      ],
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "./src/types/",
      "./node_modules/@types/"
    ],
    "target": "es5",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": ["es6", "dom", "ES2020"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noStrictGenericChecks": false,
    "forceConsistentCasingInFileNames": true,
    "removeComments": false,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**",
    "**/*.spec.ts", "*.js"
  ]
}
